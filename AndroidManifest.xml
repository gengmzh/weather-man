<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.weather.weatherman"
	android:versionCode="181" android:versionName="1.8.1">

	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RUN_INSTRUMENTATION" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

	<instrumentation android:name="android.test.InstrumentationTestRunner" android:label="Test for my app"
		android:targetPackage="org.weather.weatherman" />

	<application android:name=".WeatherApplication" android:icon="@drawable/icon" android:allowBackup="true"
	    android:label="@string/app_name" android:theme="@android:style/Theme.Light">
	    
	    <!-- 百度移动统计相关 -->
	    <!-- 渠道商编号，其中name 请不要改，将value 修改为渠道商编号。渠道名称请到mtj.baidu.com的渠道管理中修改 -->
		<meta-data android:name="BaiduMobAd_CHANNEL" android:value="91" />
		<!-- 您从百度网站获取的APPKEY -->
		<meta-data android:name="BaiduMobAd_STAT_ID" android:value="32eeab3573" />
		<!-- 以下是可选的 -->
		<!-- 是否开启错误日志统计，默认为false -->
		<meta-data android:name="BaiduMobAd_EXCEPTION_LOG" android:value="true" />
		<!-- 日志发送策略，可选值：APP_START、ONCE_A_DAY、SET_TIME_INTERVAL，默认为APP_START -->
		<meta-data android:name="BaiduMobAd_SEND_STRATEGY" android:value="APP_START" />
		<!-- 上面的日志发送策略为SET_TIME_INTERVAL时，需设定时间间隔。取值为1-­‐24（小时）的整数，默认为1 -->
		<meta-data android:name="BaiduMobAd_TIME_INTERVAL" android:value="1" />
		<!-- 日志仅在wifi 网络下发送，默认为false -->
		<meta-data android:name="BaiduMobAd_ONLY_WIFI" android:value="false" />
		<!-- 是否获取基站位置信息，默认为true(获取基站位置) -->
		<meta-data android:name="BaiduMobAd_CELL_LOCATION" android:value="true" />
	    
		<uses-library android:name="android.test.runner" />
		<!-- <activity android:name="cn.domob.android.ads.DomobActivity" android:theme="@android:style/Theme.Translucent" /> -->
		
		<activity android:name=".activity.WeathermanActivity" android:label="@string/app_name" 
		    android:theme="@android:style/Theme.Light.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.RealtimeActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.org.weather.weatherman.provider.realtime" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.TrendActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.org.weather.weatherman.provider.forecast" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.ForecastActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.org.weather.weatherman.provider.forecast" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.AQIActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.org.weather.weatherman.provider.aqi" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.SettingActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.CityActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="org.achartengine.GraphicalActivity" />

		<provider android:name=".content.WeatherContentProvider" android:authorities="org.weather.weatherman.provider" />
		
		<service android:name="com.baidu.location.f" android:enabled="true" android:process=":remote"></service>
		
	</application>

</manifest>